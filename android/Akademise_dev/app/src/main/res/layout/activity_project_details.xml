<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDetailsActivity">

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:layout_constraintWidth_percent="0.05">
    </Space>
    <View
        android:id="@+id/myRectangleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="1"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/small_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.35"
        android:background="@drawable/small_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo2"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.35"
        android:background="@drawable/small_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Space
        android:id="@+id/spacex"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView">
    </Space>

    <TextView
        android:id="@+id/title"
        style="@style/textView"
        android:layout_width="129dp"
        android:layout_height="32dp"
        android:text="Project Title"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@+id/spacex"
        app:layout_constraintWidth_percent="0.30"></TextView>
    <Space
        android:id="@+id/right_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:layout_constraintWidth_percent="0.05">
    </Space>
    <Button
        android:id="@+id/btnDeleteProject"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_shape"
        android:text="Delete"
        app:layout_constraintEnd_toStartOf="@+id/right_space"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@+id/spacex"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnEditProject"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_shape"
        android:text="Edıt"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteProject"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@+id/spacex"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintWidth_percent="0.25" />

    <Space
        android:id="@+id/space1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProject"
        app:layout_constraintWidth_percent="1">
    </Space>

    <EditText
        android:id="@+id/tvAbstractProject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Abstract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space1"/>
    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAbstractProject">

    </Space>
    <EditText
        android:id="@+id/tvTagsProject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"/>
    <Space
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTagsProject">

    </Space>
    <EditText
        android:id="@+id/tvMilestoneProject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Milestone List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space3"/>
    <Space
        android:id="@+id/space4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMilestoneProject"/>

    <EditText
        android:id="@+id/tvRequirementsProject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Requirements List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space4"/>
    <Space
        android:id="@+id/space5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequirementsProject"/>

    <EditText
        android:id="@+id/tvStatusProject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space5"/>
    <Space
        android:id="@+id/space6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatusProject"/>

    <EditText
        android:id="@+id/tvCollaborators"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_shape"
        style="@style/textView"
        android:text="Collaborators"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space6"/>
    <Space
        android:id="@+id/space7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCollaborators"/>



    <Button

        android:id="@+id/btnReqInvProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests and Invıtatıons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFilesProject"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_shape"
        style="@style/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCollaborators" />

    <Button
        android:id="@+id/btnFilesProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fıles"
        app:layout_constraintBottom_toBottomOf="@+id/btnReqInvProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_shape"
        style="@style/textView"
        app:layout_constraintTop_toBottomOf="@+id/tvCollaborators"
        app:layout_constraintStart_toEndOf="@+id/btnReqInvProject"
        app:layout_constraintTop_toTopOf="@+id/btnReqInvProject" />

</androidx.constraintlayout.widget.ConstraintLayout>